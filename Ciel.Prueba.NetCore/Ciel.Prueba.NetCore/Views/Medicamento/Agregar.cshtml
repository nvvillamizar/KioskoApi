@using Ciel.Prueba.NetCore.Entidades;
@model MedicamentoE

@{
    List<SelectListItem> listadoFarma = ViewBag.ListarFormaFarma;
}

<div class="container">
    <h1>Crear nuevo Medicamento</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Agregar" method="POST" id="formularioEnviar">
                <div class="form-group">
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Precio"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Stock"></label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Concentracion"></label>
                    <input asp-for="Concentracion" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="IdFormaFarmaceutica"></label>
                    <select asp-for="IdFormaFarmaceutica" class="form-control" asp-items="@listadoFarma"></select>
                    <span asp-validation-for="IdFormaFarmaceutica" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Presentacion"></label>
                    <input asp-for="Presentacion" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="button" value="Agregar" id="agregarMedicamento" class="btn btn-primary" />
                    <a asp-action="Index" asp-controller="Medicamento" class="btn btn-danger">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/generic.js"></script>

<script>

    document.getElementById("agregarMedicamento").addEventListener("click", validarFormulario);

    function validarFormulario() {

        mostrarModal().then((result) => {
            if (result.isConfirmed) {
                const formularioEnviar = document.getElementById("formularioEnviar");
                formularioEnviar.submit();
            }
        })

    }

</script>
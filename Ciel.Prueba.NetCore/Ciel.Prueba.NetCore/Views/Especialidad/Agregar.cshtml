@using Ciel.Prueba.NetCore.Entidades;
@model EspecialidadE
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="container">
    <h1>Crear nueva especialidad</h1>
    <hr />
    <div class="row">
        <div class="col-md-12">
            @if (Model != null && Model.MensajeError != null && Model.MensajeError != "")
            {
                <div class="alert alert-danger">
                    <b>Atenci&Oacute;n: </b>
                    @Model.MensajeError
                </div>
            }
        </div>
        <div class="col-md-6">
            <form asp-action="Agregar" method="POST" id="formularioEnviar">
                <div class="form-group">
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion"></label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="button" value="Agregar" id="agregarEspecialidad" class="btn btn-primary" />
                    <a asp-action="Index" asp-controller="Especialidad" class="btn btn-danger">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/generic.js"></script>

<script>

    document.getElementById("agregarEspecialidad").addEventListener("click", validarFormulario);

    function validarFormulario() {

        mostrarModal().then((result) => {
            if (result.isConfirmed) {
                const formularioEnviar = document.getElementById("formularioEnviar");
                formularioEnviar.submit();
            }
        })

    }

</script>
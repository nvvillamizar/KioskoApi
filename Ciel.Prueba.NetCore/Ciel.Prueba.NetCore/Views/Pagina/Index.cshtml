@using Ciel.Prueba.NetCore.Entidades;
@model IEnumerable<PaginaE>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPagina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Accion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Controlador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bhabilitado)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (PaginaE obtnerPagina in Model)
        {
        <tr>
            <td>
                @obtnerPagina.IdPagina
            </td>
            <td>
                @obtnerPagina.Mensaje
            </td>
            <td>
                @obtnerPagina.Accion
            </td>
            <td>
                @obtnerPagina.Controlador
            </td>
            <td>
                @if (obtnerPagina.Bhabilitado)
                {
                    <span class="badge badge-success">Habilitado</span>
                }
                else
                {
                    <span class="badge badge-danger">Deshabilitado</span>
                }

            </td>
        </tr>
        }
    </tbody>
</table>
